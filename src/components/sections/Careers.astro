---
import { CAREER_AREAS } from '../../constants/site';

const benefits = [
  {
    title: "Competitive Compensation",
    description: "Market-leading salaries and performance-based bonuses",
    icon: "money"
  },
  {
    title: "Professional Growth",
    description: "Continuous learning opportunities and career advancement",
    icon: "growth"
  },
  {
    title: "Pan-African Impact",
    description: "Work on projects that transform infrastructure across Africa",
    icon: "impact"
  },
  {
    title: "Flexible Work",
    description: "Hybrid work options and flexible scheduling",
    icon: "flexible"
  },
  {
    title: "Health Benefits",
    description: "Comprehensive health insurance and wellness programs",
    icon: "health"
  },
  {
    title: "Team Culture",
    description: "Collaborative environment with diverse, talented professionals",
    icon: "culture"
  }
];
---

<section id="careers" class="py-20 bg-gradient-to-br from-emerald-50 to-orange-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-4xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        Join Our <span class="text-emerald-600">Dynamic Team</span>
      </h2>
      <p class="text-lg text-gray-600 leading-relaxed">
        We're always looking for talented professionals to join our mission of transforming 
        infrastructure and service delivery across Africa. Be part of something bigger.
      </p>
    </div>

    <!-- Career Areas -->
    <div class="mb-16">
      <div class="text-center mb-12">
        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          Explore Opportunities
        </h3>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Join our team across various specializations and help shape the future of African infrastructure.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {CAREER_AREAS.map((area) => (
          <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 group">
            <div class="w-12 h-12 bg-gradient-to-br from-emerald-100 to-orange-100 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-200">
              {area === "Engineering" && (
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                </svg>
              )}
              {area === "Facility Management" && (
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              )}
              {area === "Real Estate Advisory" && (
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"></path>
                </svg>
              )}
              {area === "Logistics and Procurement" && (
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              )}
              {area === "Project Management" && (
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
              )}
              {area === "Business Development" && (
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              )}
            </div>
            <h4 class="text-xl font-bold text-gray-900 mb-3">
              {area}
            </h4>
            <p class="text-gray-600 mb-4">
              {area === "Engineering" && "Mechanical, electrical, and civil engineering roles across our African projects."}
              {area === "Facility Management" && "Property maintenance, asset management, and sustainability specialists."}
              {area === "Real Estate Advisory" && "Property development advisors and investment analysis experts."}
              {area === "Logistics and Procurement" && "Supply chain coordinators and procurement specialists."}
              {area === "Project Management" && "Project managers and coordinators for infrastructure projects."}
              {area === "Business Development" && "Sales, partnerships, and market expansion professionals."}
            </p>
            <div class="flex items-center text-emerald-600 font-medium text-sm">
              View Openings
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Benefits & Culture -->
    <div class="mb-16">
      <div class="text-center mb-12">
        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          Why Work With Us?
        </h3>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Join a company that invests in your growth while making a meaningful impact across Africa.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {benefits.map((benefit) => (
          <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow duration-200">
            <div class="w-12 h-12 bg-gradient-to-br from-emerald-100 to-orange-100 rounded-xl flex items-center justify-center mb-4">
              {benefit.icon === "money" && (
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
              )}
              {benefit.icon === "growth" && (
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              )}
              {benefit.icon === "impact" && (
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
              {benefit.icon === "flexible" && (
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
              {benefit.icon === "health" && (
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              )}
              {benefit.icon === "culture" && (
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              )}
            </div>
            <h4 class="text-lg font-semibold text-gray-900 mb-2">
              {benefit.title}
            </h4>
            <p class="text-gray-600 text-sm">
              {benefit.description}
            </p>
          </div>
        ))}
      </div>
    </div>

    <!-- Application CTA -->
    <div class="text-center">
      <div class="bg-gradient-to-r from-emerald-600 via-orange-600 to-red-600 rounded-2xl p-8 md:p-12 text-white">
        <h3 class="text-2xl md:text-3xl font-bold mb-4">
          Ready to Shape Africa's Future?
        </h3>
        <p class="text-lg text-emerald-100 mb-8 max-w-2xl mx-auto">
          Join Qadosh Management Services and be part of transforming infrastructure 
          and service delivery across the African continent.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#contact"
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-base font-medium rounded-xl text-white bg-transparent hover:bg-white hover:text-emerald-600 transition-all duration-200 shadow-lg hover:shadow-xl"
          >
            Apply Now
            <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a
            href="mailto:careers@qadoshmanagement.com"
            class="inline-flex items-center justify-center px-8 py-4 text-base font-medium rounded-xl text-white bg-white/10 hover:bg-white/20 transition-colors duration-200"
          >
            Email HR Department
          </a>
        </div>
      </div>
    </div>
  </div>
</section> 