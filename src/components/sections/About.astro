---
const features = [
  {
    title: "ISO Compliance",
    description: "Expert guidance on ISO 9001, 14001, 45001 and other quality standards.",
    icon: "certification"
  },
  {
    title: "Process Improvement",
    description: "Streamline operations and eliminate waste through proven methodologies.",
    icon: "improvement"
  },
  {
    title: "Training & Development",
    description: "Comprehensive training programs to build quality culture in your organization.",
    icon: "training"
  },
  {
    title: "Audit Support",
    description: "Internal and external audit preparation and management services.",
    icon: "audit"
  }
];

const stats = [
  { value: "500+", label: "Projects Completed" },
  { value: "99%", label: "Client Satisfaction" },
  { value: "15+", label: "Years Experience" },
  { value: "50+", label: "Expert Consultants" }
];
---

<section id="about" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        About QMS Company
      </h2>
      <p class="text-lg text-gray-600 leading-relaxed">
        With over 15 years of experience in quality management, we help organizations 
        achieve operational excellence through systematic approaches to quality, 
        compliance, and continuous improvement.
      </p>
    </div>

    <!-- Stats Section -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-20">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-blue-600 mb-2">
            {stat.value}
          </div>
          <div class="text-sm text-gray-600 uppercase tracking-wide">
            {stat.label}
          </div>
        </div>
      ))}
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
      {features.map((feature) => (
        <div class="text-center group">
          <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:bg-blue-200 transition-colors duration-200">
            {feature.icon === "certification" && (
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            )}
            {feature.icon === "improvement" && (
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            )}
            {feature.icon === "training" && (
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            )}
            {feature.icon === "audit" && (
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
            )}
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            {feature.title}
          </h3>
          <p class="text-gray-600">
            {feature.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Mission Statement -->
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-2xl p-8 md:p-12">
      <div class="max-w-4xl mx-auto text-center">
        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
          Our Mission
        </h3>
        <p class="text-lg text-gray-700 leading-relaxed">
          To empower organizations with world-class quality management solutions that drive 
          sustainable growth, operational excellence, and customer satisfaction. We believe 
          that quality is not just a departmentâ€”it's a mindset that transforms businesses.
        </p>
      </div>
    </div>
  </div>
</section> 