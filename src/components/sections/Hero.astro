---
import { SITE } from '../../constants/site';

export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
}

const {
  title = SITE.title,
  subtitle = "Delivering innovative solutions across infrastructure, engineering, logistics, and real estate.",
  description = "A forward-thinking, Nigerian-owned company offering comprehensive services in infrastructure, engineering, logistics, and real estate. With a passion for delivering strategic and cost-effective solutions, we strive to make a lasting impact across Africa."
} = Astro.props;
---

<section id="home" class="pt-16 bg-gradient-to-br from-emerald-50 via-white to-orange-50 min-h-screen flex items-center relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-20 left-10 w-32 h-32 bg-emerald-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
    <div class="absolute top-40 right-20 w-40 h-40 bg-orange-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-20 left-20 w-36 h-36 bg-red-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <!-- Company Badge -->
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-emerald-100 text-emerald-800 text-sm font-medium">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Nigerian-Owned â€¢ Pan-African Reach
        </div>

        <div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
            <span class="text-emerald-600">Empowering Africa</span> Through Smart
            <span class="text-orange-600">Facility Management</span> & Engineering Excellence
          </h1>
        </div>
        
        <p class="text-xl text-gray-600 leading-relaxed max-w-2xl">
          {description}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#services"
            class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-medium rounded-lg text-white bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
          >
            Explore Our Services
            <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          
          <a
            href="#contact"
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-orange-600 text-base font-medium rounded-lg text-orange-600 bg-white hover:bg-orange-50 transition-colors duration-200 shadow-md hover:shadow-lg"
          >
            Partner With Us
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="pt-8 border-t border-gray-200">
          <p class="text-sm text-gray-500 uppercase tracking-wide font-semibold mb-4">
            Trusted Across Africa
          </p>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
            <div>
              <div class="text-2xl font-bold text-emerald-600">50+</div>
              <div class="text-sm text-gray-600">Projects Completed</div>
            </div>
            <div>
              <div class="text-2xl font-bold text-orange-600">5+</div>
              <div class="text-sm text-gray-600">Years Experience</div>
            </div>
            <div>
              <div class="text-2xl font-bold text-red-600">100%</div>
              <div class="text-sm text-gray-600">Client Satisfaction</div>
            </div>
            <div>
              <div class="text-2xl font-bold text-emerald-600">24/7</div>
              <div class="text-sm text-gray-600">Support Available</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Visual Element -->
      <div class="relative">
        <div class="relative z-10">
          <!-- Hero Image/Illustration -->
          <div class="aspect-square bg-gradient-to-br from-emerald-100 via-white to-orange-100 rounded-3xl shadow-2xl flex items-center justify-center border border-gray-200">
            <div class="text-center space-y-6 p-8">
              <!-- African Map Inspired Icon -->
              <div class="w-32 h-32 bg-gradient-to-br from-emerald-600 to-orange-600 rounded-2xl mx-auto flex items-center justify-center transform rotate-3">
                <div class="text-center text-white">
                  <svg class="w-16 h-16 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                  </svg>
                  <div class="text-sm font-bold">Africa</div>
                </div>
              </div>
              
              <!-- Service Icons -->
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-white p-4 rounded-xl shadow-md">
                  <svg class="w-8 h-8 text-emerald-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                  </svg>
                  <div class="text-xs font-medium text-gray-700">Engineering</div>
                </div>
                
                <div class="bg-white p-4 rounded-xl shadow-md">
                  <svg class="w-8 h-8 text-orange-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                  <div class="text-xs font-medium text-gray-700">Facilities</div>
                </div>
                
                <div class="bg-white p-4 rounded-xl shadow-md">
                  <svg class="w-8 h-8 text-red-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"></path>
                  </svg>
                  <div class="text-xs font-medium text-gray-700">Real Estate</div>
                </div>
                
                <div class="bg-white p-4 rounded-xl shadow-md">
                  <svg class="w-8 h-8 text-emerald-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                  </svg>
                  <div class="text-xs font-medium text-gray-700">Logistics</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Background decorative elements with African colors -->
        <div class="absolute -top-4 -right-4 w-72 h-72 bg-emerald-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-pulse"></div>
        <div class="absolute -bottom-8 -left-4 w-72 h-72 bg-orange-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/2 -right-8 w-64 h-64 bg-red-200 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse" style="animation-delay: 3s;"></div>
      </div>
    </div>
  </div>
</section> 