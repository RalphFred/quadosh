---
// import logo from '../../assets/images/logo.jpg';

export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
}

const {
  title = "Quality Management Solutions",
  subtitle = "Excellence Through Systematic Improvement",
  description = "Professional quality management solutions designed to help your organization achieve operational excellence, compliance, and continuous improvement."
} = Astro.props;
---

<section id="home" class="pt-16 bg-gradient-to-br from-blue-50 via-white to-purple-50 min-h-screen flex items-center">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
            {title}
          </h1>
          <p class="text-xl md:text-2xl text-blue-600 font-semibold mt-4">
            {subtitle}
          </p>
        </div>
        
        <p class="text-lg text-gray-600 leading-relaxed max-w-2xl">
          {description}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#contact"
            class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-200 shadow-lg hover:shadow-xl"
          >
            Get Started Today
            <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          
          <a
            href="#about"
            class="inline-flex items-center justify-center px-8 py-4 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200 shadow-md hover:shadow-lg"
          >
            Learn More
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="pt-8 border-t border-gray-200">
          <p class="text-sm text-gray-500 uppercase tracking-wide font-semibold mb-4">
            Trusted by Industry Leaders
          </p>
          <div class="flex items-center space-x-8 opacity-60">
            <!-- Placeholder for client logos -->
            <div class="bg-gray-200 h-8 w-20 rounded"></div>
            <div class="bg-gray-200 h-8 w-20 rounded"></div>
            <div class="bg-gray-200 h-8 w-20 rounded"></div>
            <div class="bg-gray-200 h-8 w-20 rounded"></div>
          </div>
        </div>
      </div>
      
      <!-- Visual Element -->
      <div class="relative">
        <div class="relative z-10">
          <!-- Hero Image/Illustration Placeholder -->
          <div class="aspect-square bg-gradient-to-br from-blue-100 to-purple-100 rounded-2xl shadow-2xl flex items-center justify-center">
            <div class="text-center space-y-4">
              <div class="w-24 h-24 bg-blue-600 rounded-full mx-auto flex items-center justify-center">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <p class="text-lg font-semibold text-gray-700">Quality Assured</p>
            </div>
          </div>
        </div>
        
        <!-- Background decorative elements -->
        <div class="absolute -top-4 -right-4 w-72 h-72 bg-blue-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-pulse"></div>
        <div class="absolute -bottom-8 -left-4 w-72 h-72 bg-purple-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-pulse" style="animation-delay: 2s;"></div>
      </div>
    </div>
  </div>
</section> 