---
import { SITE } from '../../constants/site';

const contactInfo = [
  {
    title: "Phone",
    value: SITE.contact.phone,
    icon: "phone",
    href: `tel:${SITE.contact.phone.replace(/\s/g, '')}`
  },
  {
    title: "Email", 
    value: SITE.contact.email,
    icon: "email",
    href: `mailto:${SITE.contact.email}`
  },
  {
    title: "Office",
    value: SITE.contact.address.full,
    icon: "location",
    href: "#"
  }
];
---

<section id="contact" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        Get In <span class="text-emerald-600">Touch</span>
      </h2>
      <p class="text-lg text-gray-600 leading-relaxed">
        Ready to transform your infrastructure and facilities? Contact Qadosh Management Services today 
        for a free consultation and discover how we can drive value for your next project across Africa.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-gradient-to-br from-emerald-50 to-orange-50 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">
          Send us a Message
        </h3>
        
        <form class="space-y-6" action="#" method="POST">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                First Name *
              </label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors duration-200"
                placeholder="John"
              />
            </div>
            
            <div>
              <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                Last Name *
              </label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors duration-200"
                placeholder="Doe"
              />
            </div>
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email Address *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors duration-200"
              placeholder="john.doe@company.com"
            />
          </div>
          
          <div>
            <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
              Company / Organization
            </label>
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors duration-200"
              placeholder="Your Company Name"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
              Phone Number
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors duration-200"
              placeholder="+234 XXX XXX XXXX"
            />
          </div>
          
          <div>
            <label for="service" class="block text-sm font-medium text-gray-700 mb-2">
              Service of Interest
            </label>
            <select
              id="service"
              name="service"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors duration-200"
            >
              <option value="">Select a service</option>
              <option value="engineering">Engineering Services</option>
              <option value="facility-management">Facility Management</option>
              <option value="real-estate">Real Estate Development & Advisory</option>
              <option value="procurement-logistics">Procurement & Logistics</option>
              <option value="project-management">Project Management</option>
              <option value="consultation">General Consultation</option>
            </select>
          </div>

          <div>
            <label for="location" class="block text-sm font-medium text-gray-700 mb-2">
              Project Location
            </label>
            <input
              type="text"
              id="location"
              name="location"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors duration-200"
              placeholder="Lagos, Nigeria / Other African Country"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Project Details / Message *
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-colors duration-200 resize-none"
              placeholder="Tell us about your project requirements, timeline, and how we can help transform your infrastructure..."
            ></textarea>
          </div>
          
          <div class="flex items-start">
            <input
              type="checkbox"
              id="privacy"
              name="privacy"
              required
              class="mt-1 h-4 w-4 text-emerald-600 border-gray-300 rounded focus:ring-emerald-500"
            />
            <label for="privacy" class="ml-2 text-sm text-gray-600">
              I agree to the <a href="#" class="text-emerald-600 hover:text-emerald-700 underline">Privacy Policy</a> 
              and consent to being contacted about QMS services. *
            </label>
          </div>
          
          <button
            type="submit"
            class="w-full bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white font-medium py-4 px-6 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-6">
            Contact Information
          </h3>
          <p class="text-gray-600 mb-8">
            We're here to help you achieve infrastructure excellence across Africa. Reach out to us 
            through any of the channels below, and our experienced team will get back to you promptly.
          </p>
        </div>

        <!-- Contact Details -->
        <div class="space-y-6">
          {contactInfo.map((info) => (
            <div class="flex items-start">
              <div class="w-12 h-12 bg-gradient-to-br from-emerald-100 to-orange-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                {info.icon === "phone" && (
                  <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                )}
                {info.icon === "email" && (
                  <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                )}
                {info.icon === "location" && (
                  <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                )}
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-1">
                  {info.title}
                </h4>
                {info.href && info.href !== "#" ? (
                  <a
                    href={info.href}
                    class="text-gray-600 hover:text-emerald-600 transition-colors duration-200"
                  >
                    {info.value.split('\n').map((line, index) => (
                      <span>
                        {line}
                        {index < info.value.split('\n').length - 1 && <br />}
                      </span>
                    ))}
                  </a>
                ) : (
                  <span class="text-gray-600">
                    {info.value.split('\n').map((line, index) => (
                      <span>
                        {line}
                        {index < info.value.split('\n').length - 1 && <br />}
                      </span>
                    ))}
                  </span>
                )}
              </div>
            </div>
          ))}
        </div>

        <!-- Business Hours -->
        <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl p-6">
          <h4 class="text-lg font-semibold text-gray-900 mb-4">
            Business Hours (WAT)
          </h4>
          <div class="space-y-2 text-sm text-gray-600">
            <div class="flex justify-between">
              <span>Monday - Friday</span>
              <span>{SITE.hours.weekdays}</span>
            </div>
            <div class="flex justify-between">
              <span>Saturday</span>
              <span>{SITE.hours.saturday}</span>
            </div>
            <div class="flex justify-between">
              <span>Sunday</span>
              <span>{SITE.hours.sunday}</span>
            </div>
          </div>
        </div>

        <!-- Service Areas -->
        <div class="bg-gradient-to-br from-emerald-50 to-orange-50 rounded-xl p-6">
          <h4 class="text-lg font-semibold text-gray-900 mb-4">
            Service Areas
          </h4>
          <div class="grid grid-cols-2 gap-3 text-sm text-gray-600">
            <div class="flex items-center">
              <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Nigeria
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Ghana
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Kenya
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              South Africa
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Tanzania
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 text-emerald-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              & More
            </div>
          </div>
        </div>

        <!-- Response Time -->
        <div class="bg-gradient-to-r from-emerald-50 to-emerald-100 rounded-xl p-6">
          <h4 class="text-lg font-semibold text-gray-900 mb-2">
            Quick Response Guarantee
          </h4>
          <p class="text-sm text-gray-600">
            We respond to all inquiries within 24 hours during business days. 
            For urgent infrastructure needs, please call us directly for immediate assistance.
          </p>
        </div>
      </div>
    </div>
  </div>
</section> 