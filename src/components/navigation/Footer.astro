---
import { SITE } from '../../constants/site';

const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { name: 'About Us', href: '#about' },
    { name: 'Services', href: '#services' },
    { name: 'Projects', href: '#projects' },
    { name: 'Careers', href: '#careers' },
  ],
  services: [
    { name: 'Engineering Services', href: '#services' },
    { name: 'Facility Management', href: '#services' },
    { name: 'Real Estate Advisory', href: '#services' },
    { name: 'Logistics & Procurement', href: '#services' },
  ],
  contact: [
    { name: 'Get In Touch', href: '#contact' },
    { name: 'Phone', href: `tel:${SITE.contact.phone.replace(/\s/g, '')}` },
    { name: 'Email', href: `mailto:${SITE.contact.email}` },
    { name: 'Location', href: '#contact' },
  ],
};
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <div class="flex items-center space-x-3 mb-4">
          <div class="w-10 h-10 bg-gradient-to-br from-emerald-600 to-orange-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg">Q</span>
          </div>
          <div class="flex flex-col">
            <span class="text-xl font-bold text-white">{SITE.name}</span>
            <span class="text-sm text-gray-400 -mt-1">Facility Management & Engineering</span>
          </div>
        </div>
        <p class="text-gray-400 text-sm leading-6 mb-6">
          {SITE.company.description}
        </p>
        <div class="flex space-x-4">
          <a href={SITE.social.facebook} class="text-gray-400 hover:text-emerald-400 transition-colors duration-200">
            <span class="sr-only">Facebook</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
            </svg>
          </a>
          <a href={SITE.social.linkedin} class="text-gray-400 hover:text-emerald-400 transition-colors duration-200">
            <span class="sr-only">LinkedIn</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href={SITE.social.twitter} class="text-gray-400 hover:text-emerald-400 transition-colors duration-200">
            <span class="sr-only">Twitter</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
            </svg>
          </a>
          <a href={SITE.social.instagram} class="text-gray-400 hover:text-emerald-400 transition-colors duration-200">
            <span class="sr-only">Instagram</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C23.975 5.367 18.608.029 12.017.029zM8.552 3.475h6.896c2.822 0 5.077 2.255 5.077 5.077v6.896c0 2.822-2.255 5.077-5.077 5.077H8.552c-2.822 0-5.077-2.255-5.077-5.077V8.552c0-2.822 2.255-5.077 5.077-5.077zm3.465 2.8c-2.494 0-4.512 2.018-4.512 4.512s2.018 4.512 4.512 4.512 4.512-2.018 4.512-4.512-2.018-4.512-4.512-4.512zm0 7.417c-1.603 0-2.905-1.302-2.905-2.905s1.302-2.905 2.905-2.905 2.905 1.302 2.905 2.905-1.302 2.905-2.905 2.905zm5.77-7.723a1.077 1.077 0 11-2.154 0 1.077 1.077 0 012.154 0z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Company</h3>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-emerald-400 transition-colors duration-200 text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Services</h3>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-emerald-400 transition-colors duration-200 text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Contact</h3>
        <ul class="space-y-3">
          {footerLinks.contact.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-emerald-400 transition-colors duration-200 text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
        <div class="mt-6 text-xs text-gray-500">
          <p>{SITE.contact.address.city}, {SITE.contact.address.country}</p>
          <p class="mt-1">Serving Africa</p>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">
          Â© {currentYear} {SITE.name}. All rights reserved.
        </p>
        <div class="mt-4 md:mt-0">
          <div class="flex space-x-6">
            <a href="#" class="text-gray-400 hover:text-emerald-400 text-sm transition-colors duration-200">
              Privacy Policy
            </a>
            <a href="#" class="text-gray-400 hover:text-emerald-400 text-sm transition-colors duration-200">
              Terms of Service
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer> 